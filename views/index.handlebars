<h1>{{title}}</h1>
<p>Total cost: {{total}}</p>

{{# each products }}
<div class="row">
  <div class="col-md-12">
    <div class="thumbnail">
      <div class="caption">
        <p class="description">x{{{qty}}}</p>
        <div class="clearfix">
          <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{pd_price}} CHF
          </div>
          <a href="/cart/add" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart"
              aria-hidden="true"></i> Add to cart</a>
          <form action="http://localhost:4000/api/v1/paypal/" method="POST">
            <input type="submit" value="Buy">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}